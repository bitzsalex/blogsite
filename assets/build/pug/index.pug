doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title This is a test website
        link(rel="stylesheet", href="./assets/css/app.css")
    body 
        main
            section.section-padding.bg-gore-50.bg-opacity-40
                .inner
                    .flex.items-center.gap-20
                        h1.text-h1.flex-1.m-0  Plot Space
                        div(class="w-1/2 text-subtitle")
                            p The discoveries, experiences, study notes, and resources I came across in my journey put together in words.

            section
                .inner
                    .wrapper.wrapper--right
                        div.article-wrapper.section-padding
                            article.article
                                header.article__header
                                    ul.article__published.article__published--sm
                                        li Dec 12, 2022 
                                        li 4 min read
                                    h3.article__heading #[a(href="") Join the Awwwards Jury 2023]
                                div.article__info
                                    a(href="") 
                                        figure.article__figure
                                            img(src="./assets/img/space.jpg", alt="", srcset="")
                                    div.article__class
                                        strong by
                                        ul.authors-credit
                                            li
                                                figure.authors-credit__avatar.authors-credit__avatar--circle
                                                    img(src="./assets/img/1.png", alt="", srcset="")
                                            li
                                                ul.authors-credit__names
                                                    li #[a.link(href="#") Bitzs Alex]
                                        strong in
                                        ul(class="article__category")
                                            li #[a(href="#") Programming]
                                            
                                    div.article__excerpt
                                        p Lorem ipsum dolor sit amet consectetur adipisicing elit. Nam officiis expedita soluta sed quam sunt voluptatum explicabo obcaecati ut quisquam?
                                    
                                footer.article__footer
                                    div
                                        a.article__link(href="") #[span Read article] #[i(data-feather="arrow-up-right")]

                            each _, i in Array(10)
                                article.article
                                    header.article__header
                                        ul.article__published.article__published--sm
                                            li Dec 12, 2022
                                            li 4 min read

                                        h3.article__heading #[a(href="") Join the Awwwards Jury 2023]
                                    div.article__info
                                        a(href="") 
                                            figure.article__figure
                                                img(src="./assets/img/banner_image.png", alt="", srcset="")

                                        div.article__class
                                            strong by
                                            ul.authors-credit
                                                li
                                                    figure.authors-credit__avatar.authors-credit__avatar--circle
                                                        img(src="./assets/img/1.png", alt="", srcset="")
                                                    figure.authors-credit__avatar.authors-credit__avatar--circle
                                                        img(src="./assets/img/2.png", alt="", srcset="")
                                                li
                                                    ul.authors-credit__names
                                                        li #[a.link(href="#") Bitzs Alex]
                                                        li #[a.link(href="#") Bitzs Alex]
                                            strong in
                                            ul(class="article__category")
                                                li #[a(href="#") Programming]
                                                    li #[a(href="#") Data Science]

                                        div.article__excerpt
                                            p Lorem ipsum dolor sit amet consectetur adipisicing elit. Nam officiis expedita soluta sed quam sunt voluptatum explicabo obcaecati ut quisquam?
                                    footer.article__footer
                                        a.article__link(href="") #[span Read article] #[i(data-feather="arrow-up-right")]
                                        div.article__series
                                            span #[i(data-feather="layers")] Series: 
                                            a.link(href="#") Something

                        aside.sticky-aside.section-padding
                            .flex.flex-col.gap-20
                                div.flex.flex-col.gap-6
                                    h3.text-h6.uppercase.m-0 Discover More
                                    ul.categories
                                        li #[a(href="#") Programming]
                                        li #[a(href="#") Data Science]
                                        li #[a(href="#") Technology]
                                        li #[a(href="#") Self Improvement]
                                        li #[a(href="#") Machine Learning]
                                        li #[a(href="#") Productivity]

                                div.flex.flex-col.gap-6
                                    h3.text-h6.uppercase.m-0 Popular Tags
                                    ul.tags
                                        li #[a(href="#") Programming]
                                        li #[a(href="#") Data Science]
                                        li #[a(href="#") Technology]
                                        li #[a(href="#") Self Improvement]
                                        li #[a(href="#") Machine Learning]
                                        li #[a(href="#") Productivity]

        footer#page-footer.section-padding.footer
            .inner
                .footer__newsletter
                    h4.m-0 Subscribe to my newsletter to get latest updates and posts
                    form.footer__form(action="", method="post")
                        .flex.items-center.gap-10
                            input.input.flex-1(type="email" name="email" placeholder="Your Email")
                            button.btn.btn--pea(type="submit") Subscribe
                div.text-overline
                    p.text-center
                        | &copy; 2022 All Rights Reserved!
                        span.block Built with #[a.link(href="https://gohugo.io" target="_blank") Hugo]
                        span.block Hosted on #[a.link(href="https://www.hostinger.com" target="_blank") Hostinger]
                div.footer__social-links
                    .inner--sm
                        ul.social-links
                            li
                                a.social-links__link(href="" target="_blank")
                                    i(data-feather="twitter") 
                            li
                                a.social-links__link(href="" target="_blank")
                                    i(data-feather="github") 
                            li
                                a.social-links__link(href="" target="_blank")
                                    i(data-feather="instagram") 
                            li
                                a.social-links__link(href="" target="_blank")
                                    i(data-feather="facebook") 
                            li
                                a.social-links__link(href="" target="_blank")
                                    i(data-feather="linkedin")


        script(src="./assets/js/app.js")