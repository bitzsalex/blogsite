doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title This is a test website
        link(rel="stylesheet", href="./assets/css/app.css")
    body 
        header#page-header.header
            .inner
                .flex.items-stretch.justify-between
                    .header__logo
                        a.flex.items-center.gap-2(href="index.html")
                            img(src="./assets/img/logo.png", alt="The main logo of the site")
                            span.header__logo__text
                                | Bitzs
                                span Space
                    .header__nav.flex-auto
                        nav.nav.nav--horizontal
                            ul.nav__menus
                                li #[a.nav__link(href="") About]
                                li #[a.nav__link(href="") Blogs]
                                li #[a.nav__link(href="") Contact]
                                li #[a.nav__link(href="") Projects]
                                li #[a.nav__link(href="") Resume]
                    .flex.items-stretch.justify-end
                        ul.header__icons
                            li.header__social
                                ul.share-links
                                    li
                                        a(href="" target="_blank")
                                            i(data-feather="twitter") 
                                    li
                                        a(href="" target="_blank")
                                            i(data-feather="github") 
                                    li
                                        a(href="" target="_blank")
                                            i(data-feather="instagram") 
                                    li
                                        a(href="" target="_blank")
                                            i(data-feather="facebook") 
                                    li
                                        a(href="" target="_blank")
                                            i(data-feather="linkedin")
                            li #[button(type="button") #[i(data-feather="search")]]
                            li
                                button.theme__toggler(type="button")
                                    span.theme__icons
                                        i.theme__sun(data-feather="sun")
                                        i.theme__moon(data-feather="moon")
                                    span.theme__name
                                        span.theme__light Light
                                        span.theme__dark Dark
        main
            section
                .inner
                    .wrapper.wrapper--left
                        aside.sticky-aside.section-padding--sm.pr-12
                            .series__wrapper
                                .series__info
                                    .flex.flex-col.gap-6
                                        h2.series__title.text-h4.m-0 Web Dev Course
                                        div Lorem ipsum dolor sit amet consectetur adipisicing elit. Doloremque in nisi impedit sequi reiciendis, accusantium quidem quam maxime placeat officia?
                                    div.series__contributors
                                        h4.text-h6.m-0 Contributors

                                        ul.authors-credit.authors-credit--vertical
                                            li
                                                a.series__contributor(href="")
                                                    figure.authors-credit__avatar.authors-credit__avatar--lg.authors-credit__avatar--circle
                                                        img(src="./assets/img/1.png", alt="", srcset="")
                                                    ul.authors-credit__names.authors-credit__names--vertical
                                                        li.font-heading #[strong Bitzs Alex]
                                                        li #[small Main Author]
                                            li
                                                a.series__contributor(href="")
                                                    figure.authors-credit__avatar.authors-credit__avatar--lg.authors-credit__avatar--circle
                                                        img(src="./assets/img/1.png", alt="", srcset="")
                                                    ul.authors-credit__names.authors-credit__names--vertical
                                                        li.font-heading #[strong Bitzs Alex]
                                                        li #[small Main Author]

                                ul.series__share.share-links.share-links--lg
                                    li #[a(href="#") #[i(data-feather="link")]]
                                    li #[a(href="#") #[i(data-feather="twitter")]]
                                    li #[a(href="#") #[i(data-feather="facebook")]]
                                    li #[a(href="#") #[i(data-feather="linkedin")]]

                        div.section-padding--sm
                            .article-wrapper.article-wrapper--vertical
                                each _, i in Array(8)
                                    article.article.article--full
                                        .article__details
                                            header.article__header
                                                ul.article__published.article__published--sm
                                                    li Dec 12, 2022
                                                    li 4 min read
                                                h3.article__heading #[a(href="") Join the Awwwards Jury 2023]
                                            div.article__info
                                                div.article__class
                                                    .flex.items-center.gap-6
                                                        strong.uppercase by
                                                        ul.authors-credit
                                                            li
                                                                figure.authors-credit__avatar.authors-credit__avatar--circle
                                                                    img(src="./assets/img/1.png", alt="", srcset="")
                                                                figure.authors-credit__avatar.authors-credit__avatar--circle
                                                                    img(src="./assets/img/2.png", alt="", srcset="")
                                                            li
                                                                ul.authors-credit__names
                                                                    li #[a.link(href="#") Bitzs Alex]
                                                                    li #[a.link(href="#") Bitzs Alex]
                                                    .flex.items-center.gap-6
                                                        strong.uppercase in
                                                        ul(class="article__category")
                                                            li #[a(href="#") Programming]
                                                                li #[a(href="#") Data Science]
                                                        
                                                div.article__excerpt
                                                    p Lorem ipsum dolor sit amet consectetur adipisicing elit. Nam officiis expedita soluta sed quam sunt voluptatum explicabo obcaecati ut quisquam?
                                                
                                            footer.article__footer
                                                div
                                                    a.article__link(href="") #[span Read article] #[i(data-feather="arrow-up-right")]
                                        .article__banner
                                            a(href="") 
                                                figure.article__figure
                                                    img(src="./assets/img/space.jpg", alt="", srcset="")

        footer#page-footer.section-padding.footer
            .inner
                .footer__newsletter
                    h4.m-0 Subscribe to my newsletter to get latest updates and posts
                    form.footer__form(action="", method="post")
                        .flex.items-center.gap-10
                            input.input.flex-1(type="email" name="email" placeholder="Your Email")
                            button.btn.btn--razzmatazz(type="submit") Subscribe
                div.text-overline
                    p.text-center
                        | &copy; 2022 All Rights Reserved!
                        span.block Built with #[a.link(href="https://gohugo.io" target="_blank") Hugo]
                        span.block Hosted on #[a.link(href="https://www.hostinger.com" target="_blank") Hostinger]
                div.footer__social-links
                    .inner--sm
                        ul.share-links.share-links--footer
                            li
                                a(href="" target="_blank")
                                    i(data-feather="twitter") 
                            li
                                a(href="" target="_blank")
                                    i(data-feather="github") 
                            li
                                a(href="" target="_blank")
                                    i(data-feather="instagram") 
                            li
                                a(href="" target="_blank")
                                    i(data-feather="facebook") 
                            li
                                a(href="" target="_blank")
                                    i(data-feather="linkedin")

        script(src="./assets/js/app.js")